<!-- Slideshow container -->
<div class="slideshow-container">

    <!-- Full-width images with number and caption text -->
    <div class="mySlides fade">
        <div class="numbertext">1 / 4</div>
        <img src="~/Images/001.jpg" style="width:100%">
        <div class="text">Caption Text</div>
    </div>

    <div class="mySlides fade">
        <div class="numbertext">2 / 4</div>
        <img src="~/Images/002.jpg" style="width:100%">
        <div class="text">Caption Two</div>
    </div>

    <div class="mySlides fade">
        <div class="numbertext">3 / 4</div>
        <img src="~/Images/003.jpg" style="width:100%">
        <div class="text">Caption Three</div>
    </div>

    <div class="mySlides fade">
        <div class="numbertext">4 / 4</div>
        <img src="~/Images/004.jpg" style="width:100%">
        <div class="text">Caption Two</div>
    </div>

    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>
<br>

<!-- The dots/circles -->
<div style="text-align:center">
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
    <span class="dot" onclick="currentSlide(3)"></span>
    <span class="dot" onclick="currentSlide(4)"></span>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Products</h2>
        <p>
            Here We Can Check The Products That We Have.<br />
            You Can Buy Your Favourite Product
        </p>
        
    </div>
    <div class="col-md-4">
        <h2>Customers</h2>
        <p>
            Here We Have Our Precious Customers That Made Our Business Wonderful. <br />
            ThankYou So Much LogIn To Your Account
        </p>
        
    </div>
    <div class="col-md-4">
        <h2>Orders</h2>
        <p>
            It's Restricted For Admin. <br />
            Admin Can LogIn To Account To Check Details
        </p>
      
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/slider")
}

