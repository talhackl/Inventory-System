
@{
    ViewBag.Title = "GetProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<table id="product" class="table table-condensed">
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts{
    @Scripts.Render("~/bundles/lib")
    <script>
        $(document).ready(function () {
            
            var table = $("#product").DataTable({
                ajax: {
                    url: "/api/products",
                    dataSrc:""
                },
                columns: [
                    {
                        data: "Name",
                       
                    },
                    {
                        data:"Quantity"
                    },
                    {
                        data:"Price"
                    },
                    {
                        data:"Categories.Name"
                    }
                ]
            });
            

        });
    </script>
}